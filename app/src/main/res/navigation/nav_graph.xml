<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/nav_dice_roller"
        android:name="de.eucalypto.eucalyptapp.DiceRollerFragment"
        android:label="fragment_dice_roller"
        tools:layout="@layout/fragment_dice_roller" />
    <fragment
        android:id="@+id/nav_about_me"
        android:name="de.eucalypto.eucalyptapp.aboutme.AboutMeFragment"
        android:label="fragment_about_me"
        tools:layout="@layout/fragment_about_me" />
    <fragment
        android:id="@+id/nav_color_my_views"
        android:name="de.eucalypto.eucalyptapp.ColorMyViewsFragment"
        android:label="fragment_color_my_views"
        tools:layout="@layout/fragment_color_my_views" />
    <fragment
        android:id="@+id/titleFragment"
        android:name="de.eucalypto.eucalyptapp.TitleFragment"
        android:label="TitleFragment"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="de.eucalypto.eucalyptapp.trivia.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" />
</navigation>